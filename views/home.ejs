<div class="home-container">
    <div class="post1">
        <div id="create-post">
            <h4>Post</h4>
            <%if(locals.user){%>
            <form action="/post/create" id="new-post-form" method="POST">
                <textarea name="content" cols="25" rows="2" placeholder="type here..."></textarea>
                <input type="submit" value="Post">
            </form>
                
</div>
            <%}%>
        <div id="post-list-container">
                <ul id="list" style="list-style: none;">
                    <%for(posts of post){%>
                    <%- include("_post")%>
                    <hr>
                    
    <%}%>
            </ul>
        </div>

</div>
<div class="post2">
    <h4>&nbsp;&nbsp;Friends List</h4>
    <%for(friend of user_list){%>
    <ul>
        <li><a href="users/profile/<%=friend.id%>"><%=friend.name%></a></li>
    </ul>

    <%}%>
</div>
</div>
